{% extends 'base.html.twig' %}

{% block body %}
    <h1>Visitorlog</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Host_ip</th>
                <td>{{ entity.hostip }}</td>
            </tr>
            <tr>
                <th>Visitor_username</th>
                <td>{{ entity.visitorusername }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ entity.description }}</td>
            </tr>
            <tr>
                <th>Created_at</th>
                <td>{% if entity.createdat %}{{ entity.createdat|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Updated_at</th>
                <td>{% if entity.updatedat %}{{ entity.updatedat|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
        <li>
            <a href="{{ path('visitorlog_index') }}">Back to the list</a>
        </li>
    </ul>
{% endblock %}
