{% extends 'home_page.html.twig' %}

{% block body -%}
    <h1>Visitorlogs list</h1>

    <table class="container">
        <thead>
            <tr>
                <th>Id</th>
                <th>Host_ip</th>
                <th>Visitor_username</th>
                <th>Description</th>
                <th>Created_at</th>
                <th>Updated_at</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('visitorlog_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.hostip }}</td>
                <td>{{ entity.visitorusername }}</td>
                <td>{{ entity.description }}</td>
                <td>{% if entity.createdat %}{{ entity.createdat|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if entity.updatedat %}{{ entity.updatedat|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('visitorlog_show', { 'id': entity.id }) }}">show</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    
{% endblock %}
