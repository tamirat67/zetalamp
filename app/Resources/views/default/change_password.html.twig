{% extends 'home_page.html.twig' %}
{% block content %}
  <div style="padding-top: 15%">
    <div class="row">
      <div class="col-md-2"></div>
      <div class="col-md-4">
       <h4 color="red">{{ error_info }}</h4>
				{{ form_start(form) }} 
				  <div><strong>Old password</strong></div>
				  {{ form_widget(form.email,{'attr':{'class':'form-control','placeholder':'Old password','padding':'4px'}})}}
          <div><strong>New password</strong></div>
				  {{ form_widget(form.password,{'attr':{'class':'form-control','placeholder':'New password','padding':'4px'}})}}
          <div><strong>Confirm password</strong></div>
				  {{ form_widget(form.confirm_password,{'attr':{'class':'form-control','placeholder':'Confirm password','padding':'4px'}})}}
          {{ form_widget(form.save,{'label':'Change password'}) }}
				{{ form_end(form) }}
      </div>
    </div> 
  </div>
{% endblock %}
