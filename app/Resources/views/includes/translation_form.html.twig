    <div class="modal-dialog modal-confirm">
        <div class="modal-content">
            <div class="modal-header">
<p class="pull-left"> {% trans %}Translation creation{% endtrans %}</p>
 <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
            </div>
            <div class="modal-body  " id="TranslationFieldContent">
                 <form action="#" id="TranslationForm" method="POST">
                     {% trans %}Translation{% endtrans %} :<br>
                    <textarea   type="text"  name="content"/>
                   <div class="modal-footer">
     <input type="submit"  class="btn btn-default"  value="{% trans %}Translate{% endtrans %}"/>
  <button type="button" class="btn btn-danger" data-dismiss="modal" >{% trans %}Close{% endtrans %}</button> 
        </div>
        </form>
        </div>
    </div>
</div>
</div> 