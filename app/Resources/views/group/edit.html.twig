   
<section class="panel">
    {% block sidebartitle %}
        <h3 class="green"><i class="fa fa-edit"></i> {% trans %}Edit{% endtrans %}</h3>
    {% endblock %}
    
                   {{ form_start(edit_form, {'action': path('group_edit', {'id':group.id})}) }}
 
            {{ form_label(edit_form.name)}}
            {{ form_widget(edit_form.name,{'attr':{'class':'form-control','placeholder':'    name'}})}}
            {{ form_errors(edit_form.name)}} 
            <br>
            {{ form_label(edit_form.permissions)}}
    {{ form_widget(edit_form.permissions,{'attr':{'class':'form-control','placeholder':'Permissions'}})}}
            {{ form_errors(edit_form.permissions)}} 
            <br>
            <!-- modal  -->
            <div   id="showDescriptionModal" class="modal" tabindex="-1" role="dialog">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal" aria-label="{% trans %}Close{% endtrans %}">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body" id="showDescriptionContent">
                            {{ form_label(edit_form.description) }}
                            {{ form_widget(edit_form.description) }}
                        </div>
                    </div>
                </div>
            </div>
            <span title="{% trans %}ShowDescription{% endtrans %}" class="btn  btn-sm btn-success btn-block" data-toggle="modal" data-target="#showDescriptionModal" id="showDescriptionDetail">
                <i class="glyphicon"> {% trans %}Description{% endtrans %}</i>
            </span>
            <br>
 <div class="col-md-6 col-sm-6 col-xs-12">

<input class="btn btn-primary btn-block " type="submit" value="{% trans %}Update{% endtrans %}" />
        </div>
    <div class="col-md-6 col-sm-6 col-xs-12">
          
<a href="{{ path('group_index') }}" class="btn btn-warning btn-block ">{% trans %}Cancel{% endtrans %}</a>


</div>
 {{ form_end(edit_form) }}
       
    
</section>
 


