{% extends 'home_page.html.twig' %}

{% block body %}
    <div class="row">
        <div class="subhead">
            <div class="table-responsive">
                <table>
                    <tr>
                        <td style="padding: 15px">
                            <a class="btn btn-primary btn-responsive" href="{{ path('office_index', {'parent': 0}) }}">
                                <i class="glyphicon glyphicon-adjust"></i> {% trans %}Back{% endtrans %}
                            </a>
                        </td>
                        {% if is_granted('CREATE_OFFICE', office) %}
                            <td style="padding: 15px">
                                {{ form_start(form) }}
                                <input class="btn btn-success btn-responsive" type="submit" value="{% trans %}Create{% endtrans %}" />
                                {{ form_errors(form) }}
                            </td>
                        {% endif %}
                    </tr>
                </table>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-xs-6 col-sm-6 col-md-6">
            <div class="box box-primary">
                <div class="box">
                    <div class="box-body">
                        {{ form_start(form) }}
                        {{ form_widget(form) }}
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
