
{% block sidebartitle %}
    <h3 class="green"><i class="fa fa-edit"></i> {% trans %}Edit{% endtrans %} </h3>
{% endblock %} 

{{ form_start(edit_form, {'action': path('office_edit', {'id':office.id})}) }}


{{ form_row(edit_form.name) }}
<!-- modal  -->
<div   id="showDescriptionModal" class="modal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="{% trans %}Close{% endtrans %}">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body" id="showDescriptionContent">
                {{ form_label(edit_form.description) }}
                {{ form_widget(edit_form.description) }}
            </div>
        </div>
    </div>
</div> 
<span title="{% trans %}ShowDescription{% endtrans %}" class="btn  btn-sm btn-success" data-toggle="modal" data-target="#showDescriptionModal" id="showDescriptionDetail"> 
    <i class="glyphicon"> {% trans %}Description{% endtrans %}</i>
</span> 
{{ form_rest(edit_form) }} 

<input class="btn btn-primary btn-responsive" type="submit" value="{% trans %}Update{% endtrans %}" />
<a href="{{ path('office_index', {'parent': 0}) }}" class="btn btn-warning btn-responsive"> {% trans %}Cancel{% endtrans %}  </a>
{{ form_end(edit_form) }}
