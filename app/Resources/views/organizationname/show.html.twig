{% extends 'home_page.html.twig' %}

{% block body %}
    <h1>Organizationname</h1>

  <table id="datatables-example" class="table table-bordered table-striped table-condensed" style="font-size:11px; background:darkgray">    
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ organizationName.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ organizationName.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ organizationName.description }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('organizationname_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('organizationname_edit', { 'id': organizationName.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
